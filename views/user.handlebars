<section class=" min-h-screen w-full flex flex-col divide-y divide-indigo-600">
    <div>
        <div class="flex justify-center my-5">
            <h1 class="font-extrabold text-4xl tracking-tight text-gray-800">User details</h1>
        </div>
        <div class="flex flex-wrap my-5">
            <div class="mx-10 my-5">
                <svg class="w-52" viewBox="0 0 24 24">
                    <path fill="currentColor"
                        d="M18,19H6V17.6C6,15.6 10,14.5 12,14.5C14,14.5 18,15.6 18,17.6M12,7A3,3 0 0,1 15,10A3,3 0 0,1 12,13A3,3 0 0,1 9,10A3,3 0 0,1 12,7M12,3A1,1 0 0,1 13,4A1,1 0 0,1 12,5A1,1 0 0,1 11,4A1,1 0 0,1 12,3M19,3H14.82C14.4,1.84 13.3,1 12,1C10.7,1 9.6,1.84 9.18,3H5A2,2 0 0,0 3,5V19A2,2 0 0,0 5,21H19A2,2 0 0,0 21,19V5A2,2 0 0,0 19,3Z" />
                </svg>
            </div>
            <div class="flex flex-col mx-5 my-10">
                <h2 class="font-bold text-lg text-gray-800">Username:</h2>
                <p class="">{{user.username}}</p>
                <h2 class="font-bold text-lg text-gray-800">Email:</h2>
                <p class="">{{user.email}}</p>
                <h2 class="font-bold text-lg text-gray-800">Role:</h2>
                <p class="">{{#if user.isAdmin}}
                    Admin
                {{else}}
                    User
                {{/if}}</p>
            </div>
        </div>
    </div>
    <div class="w-full">
        <div class="flex justify-center my-5">
            <h1 class="font-extrabold text-4xl tracking-tight text-gray-800">Suggestions</h1>
        </div>
        <div class="w-2/3 mx-auto">
            <div class="bg-white shadow-md rounded my-6">
                <table class="text-left w-full border-collapse table-auto">
                    <!--Border collapse doesn't work on this site yet but it's available in newer tailwind versions -->
                    <thead class="bg-indigo-200">
                        <tr>
                            <th class="py-4 px-6  font-bold uppercase text-sm text-gray-800 border-b border-gray-600">
                                ID</th>
                            <th class="py-4 px-6  font-bold uppercase text-sm text-grey-dark border-b border-gray-600">
                                Message</th>
                            <th class="py-4 px-6  font-bold uppercase text-sm text-grey-dark border-b border-gray-600">
                                Rating</th>
                        </tr>
                    </thead>
                    <tbody>
                    {{#each suggestionsList}}
                        <tr class="hover:bg-gray-100">
                            <td class="py-4 px-6 border-b font-bold">{{this.id}}</td>
                            <td class="py-4 px-6 border-b ">
                                <p class="text-grey-800  py-1 px-3 rounded text-sm">{{this.message}}</p>
                            </td>
                            <td class="py-4 px-6 border-b ">
                                <p class="text-grey-800 font-bold py-1 px-3 rounded">{{this.rating}}/10</p>
                            </td>
                        </tr>
                    {{else}}
                        <tr class="hover:bg-gray-100">
                            <td class="py-4 px-6 border-b" colspan="3">
                                <p class="text-grey-800  py-1 px-3 rounded text-sm">No suggestions have been made yet.</p>
                            </td>
                        </tr>
                    {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>