<!--Body of the login form-->
<section class="min-h-screen w-full flex flex-col justify-center items-center bg-indigo-100">
    <!--Card-->
    <div
        class="bg-white shadow-none sm:shadow-lg px-8 sm:px-12 w-full xs:w-full sm:w-8/12 md:w-7/12 lg:w-7/12 xl:w-2/6 h-screen sm:h-auto">
        <div class="text-center w-full font-bold text-3xl text-gray-600 p-4 uppercase">
            Login
        </div>
        <!--Gray line-->
        <div class="w-full bg-gray-200 my-3" style="height: 1px;"></div>
        <form action="/auth/login" method="post">
            <div class="flex flex-col gap-4 px-0 py-4">
                <!--Email input-->
                <div>
                    <label for="username" class="text-gray-700">Username</label>
                    <svg xmlns="http://www.w3.org/2000/svg"
                        class="font-medium text-2xl text-gray-600 p-2.5 px-3 w-11 absolute" viewBox="0 0 24 24"
                        stroke="currentColor" fill="none" stroke-width=1.5>
                        <path fill="currentColor" d="M12,19.2C9.5,19.2 7.29,17.92 6,16C6.03,14 10,12.9 12,12.9C14,12.9 17.97,14 18,16C16.71,17.92 14.5,19.2 12,19.2M12,5A3,3 0 0,1 15,8A3,3 0 0,1 12,11A3,3 0 0,1 9,8A3,3 0 0,1 12,5M12,2A10,10 0 0,0 2,12A10,10 0 0,0 12,22A10,10 0 0,0 22,12C22,6.47 17.5,2 12,2Z" />
                    </svg>
                    <input id="username" name="username" class="py-2 pl-10 border border-gray-200 w-full" placeholder="username"
                        type="text" autocomplete="username" required/>
                </div>
                <!--Password input-->
                <div>
                    <label for="current-password" class="text-gray-700">Password</label>
                    <svg xmlns="http://www.w3.org/2000/svg"
                        class="font-medium text-2xl text-gray-600 absolute p-2.5 px-3 w-11" viewBox="0 0 24 24"
                        stroke-width="1.5" stroke="#2c3e50" fill="none" stroke-linecap="round" stroke-linejoin="round">
                        <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                        <rect x="5" y="11" width="14" height="10" rx="2" />
                        <circle cx="12" cy="16" r="1" />
                        <path d="M8 11v-4a4 4 0 0 1 8 0v4" />
                    </svg>
                    <input id="current-password" name="password" class="py-2 pl-10 border border-gray-200 w-full" 
                        type="password" placeholder="password" autocomplete="current-password" required/>
                </div>
                <div class="w-full flex flex-row gap-2">
                    <!--Login button-->
                    <button type="submit"
                        class="border border-indigo-600 hover:bg-indigo-600 hover:text-white duration-100 ease-in-out w-6/12 text-indigo-600 px-0 py-3 flex flex-row justify-center items-center gap-1">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 24 24" stroke-width="1.5"
                            stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                            <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                            <path d="M14 8v-2a2 2 0 0 0 -2 -2h-7a2 2 0 0 0 -2 2v12a2 2 0 0 0 2 2h7a2 2 0 0 0 2 -2v-2" />
                            <path d="M20 12h-13l3 -3m0 6l-3 -3" />
                        </svg>
                        Login
                    </button>
                    <a href="/auth/register"
                        class="border border-indigo-600 hover:bg-indigo-600 hover:text-white duration-100 ease-in-out w-6/12 text-indigo-600 px-0 py-3 flex flex-row justify-center items-center gap-1">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 24 24" stroke-width="1.5"
                            stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                            <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                            <path d="M9 7h-3a2 2 0 0 0 -2 2v9a2 2 0 0 0 2 2h9a2 2 0 0 0 2 -2v-3" />
                            <path d="M9 15h3l8.5 -8.5a1.5 1.5 0 0 0 -3 -3l-8.5 8.5v3" />
                            <line x1="16" y1="5" x2="19" y2="8" />
                        </svg>
                        Sign-up
                    </a>
                </div>
            </div>
        </form>
    </div>
</section>